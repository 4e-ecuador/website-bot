{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Google Id</th>
            <td>{{ user.googleId }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
        </tr>
        </tbody>
    </table>

    <div class="btn-group">
        <a class="btn btn-outline-secondary" href="{{ path('user_index') }}">{{ 'Back to list'|trans }}</a>

        <a class="btn btn-outline-warning" href="{{ path('user_edit', {'id': user.id}) }}">{{ 'Edit'|trans }}</a>

        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
