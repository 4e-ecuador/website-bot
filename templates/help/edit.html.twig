    {{ include('help/_form.html.twig', {'button_label': 'Update'|trans}) }}

    <div class="btn-group">

        <a class="btn btn-secondary" href="{{ path('help_index') }}">{{ 'Back to list'|trans }}</a>

        {{ include('help/_delete_form.html.twig') }}
    </div>

{% endblock %}
