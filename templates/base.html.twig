<!DOCTYPE html>
<html prefix="og: http://ogp.me/ns#" lang="{{ locale }}">
<head>
    <script src="{{ asset('js/twbs/color-modes.js') }}"></script>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta property="og:title" content="4E - Enlightened Elite Echelon of Ecuador"/>
    <meta property="og:description" content="{% block og_description %}{% endblock %}"/>
    <meta property="og:image" content="/images/logos/4E Global black RGB.png"/>

    <title>{% block title %}4E{% endblock %}</title>

    <link rel="icon" type="image/x-icon" href="
    {%- if 'dev' == app.environment -%}
        {{ asset('favicon-dev.ico') }}
    {%- else -%}
        {{ asset('favicon.ico') }}
    {%- endif -%}
    "/>


    {% block stylesheets %}{% endblock %}
    {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body class="bootstrap-dark">
{% include('_menu.html.twig') %}

<div class="container" id="main-container">
    <noscript><h1 class="alert alert-danger">{{ 'Please activate Javascript'|trans }}</h1></noscript>
    {% include ('_flash-messages.html.twig') %}
    {% block body %}{% endblock %}
</div>

{% include ('_footer.html.twig') %}

</body>
</html>
