<!DOCTYPE html>
<html lang="{{ locale }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}4E{% endblock %}</title>

    <link rel="icon" type="image/x-icon" href="
    {%- if 'dev' == app.environment -%}
        {{ asset('favicon-dev.ico') }}
    {%- else -%}
        {{ asset('favicon.ico') }}
    {%- endif -%}
    "/>

    {{ encore_entry_link_tags('app') }}

    {% block stylesheets %}{% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body id="app-layout" class="bootstrap-dark">

<noscript><h1 class="alert alert-danger">{{ 'Please activate Javascript'|trans }}</h1></noscript>

{% include ('_flash-messages.html.twig') %}
{% block body %}{% endblock %}
</body>
</html>
