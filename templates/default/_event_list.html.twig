{% if ingressMD %}
    <h3>{{ 'Ingress Mission Day'|trans }}</h3>
    <a href="{{ fs.link }}">{{ fs.name }}</a>
{% endif %}

{% if ingressFS %}
    <div class="card">
        <div class="card-header">
            <h3>{{ 'Ingress First Saturday'|trans }}</h3>
            {{ nextFs|formatIntlDate }}
        </div>
        <div class="card-body">
            &bull;
            {% for fs in ingressFS %}
                <a href="{{ fs.link }}">{{ fs.name }}</a> &bull;
            {% endfor %}
        </div>
    </div>
{% endif %}

{% for event in currentEvents %}
    <div class="card">
        <div class="card-body">
            <h4>
                <a href="{{ path('event_show', {'id': event.id}) }}">{{ event.name }}</a>
            </h4>

            <div class="clock-counter text-center alert alert-warning"
                 data-deadline="{{ event.dateEnd|date('Y-m-d H:i', false) }}">
                <b>{{ 'Ends in'|trans }}</b> -
                {{ 'Days:'|trans }} <b class="days"></b>
                {{ 'Hours:'|trans }} <b class="hours"></b>:<b class="minutes"></b>:<b class="seconds"></b>
            </div>

        </div>
    </div>
{% endfor %}

{% for challenge in challenges %}
    <div class="card">
        <div class="card-body">
            <h4>
                <a href="{{ path('challenge_show', {'id': challenge.id}) }}">{{ challenge.name }}</a>
            </h4>

            <div class="clock-counter text-center alert alert-warning"
                 data-deadline="{{ challenge.dateEnd|date('Y-m-d H:i', false) }}">
                <b>{{ 'Ends in'|trans }}</b> -
                {{ 'Days:'|trans }} <b class="days"></b>
                {{ 'Hours:'|trans }} <b class="hours"></b>:<b class="minutes"></b>:<b class="seconds"></b>
            </div>

        </div>
    </div>
{% endfor %}

{% for event in futureEvents %}
    <div class="card">
        <div class="card-body">
            <h4>
                <a href="{{ path('event_show', {'id': event.id}) }}">{{ event.name }}</a>
            </h4>

            {{ 'Event type: {type}'|trans({'type': event.eventType}) }}

            <div class="clock-counter"
                 data-deadline="{{ event.dateStart|date('Y-m-d H:i', false) }}">
                <b>{{ 'The event starts in'|trans }}</b>
                {{ 'Days:'|trans }} <b class="days"></b>
                {{ 'Hours:'|trans }} <b class="hours"></b>
                {{ 'Minutes:'|trans }} <b class="minutes"></b>
                {{ 'Seconds:'|trans }} <b class="seconds"></b>
            </div>

        </div>
    </div>
{% endfor %}

