{% extends 'base.html.twig' %}

{% import '_paginator-elements.html.twig' as paginator %}

{% block title %}Login Attempts{% endblock %}

{% block body %}
    <h1>Login Attempts</h1>

    <form method="post" {{ stimulus_controller('paginator') }}>

        <div class="row">
            <div class="col-xs-2">{{ paginator.listLimit(paginatorOptions) }}</div>
            <div class="col-xs-10">{{ paginator.pagination(paginatorOptions) }}</div>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>{{ paginator.ordering('id', paginatorOptions) }}</th>
                <th>{{ paginator.ordering('createdAt', paginatorOptions) }}</th>
                <th>{{ paginator.ordering('email', paginatorOptions) }}</th>
                <th>{{ paginator.ordering('success', paginatorOptions) }}</th>
                <th></th>
                <th>{{ paginator.ordering('authMethod', paginatorOptions) }}</th>
            </tr>
            <tr>
                <th></th>
                <th></th>
                <th>{{ paginator.criteria('email', paginatorOptions) }}</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <th>Id</th>
                <th>Created At</th>
                <th>Email</th>
                <th>Success</th>
                <th>IP Address</th>
                <th>Auth Method</th>
            </tr>
            </thead>
            <tbody>
            {% for attempt in login_attempts %}
                <tr>
                    <td>{{ attempt.id }}</td>
                    <td>{{ attempt.createdAt ? attempt.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ attempt.email }}</td>
                    <td>
                        {% if attempt.success %}
                            <span class="badge bg-success">Yes</span>
                        {% else %}
                            <span class="badge bg-danger">No</span>
                        {% endif %}
                    </td>
                    <td>{{ attempt.ipAddress }}</td>
                    <td>{{ attempt.authMethod }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="alert alert-warning">{{ 'no records found'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ paginator.formFields(paginatorOptions) }}

    </form>
{% endblock %}
