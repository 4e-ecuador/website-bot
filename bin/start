#!/bin/bash
#
# Startup script
#

check() {
if ! command -v "$1" &> /dev/null
then
    echo "ERROR: Command '$1' could not be found on your system :("
    exit 1
fi
}

check "docker-compose"
check "symfony"

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && cd .. && pwd )"
cd "$DIR" || exit 1

echo "Starting dev env in $DIR ..."

docker-compose up -d

symfony server:start -d

symfony open:local

echo "hF =;)"
