<h3>{{ 'Latest comments'|trans }}</h3>

{% for comment in latestComments %}
    <div class="card">
        <div class="card-header">
            {% if comment.commenter.agent %}
                {{ comment.commenter.agent.nickname }}
                -
            {% endif %}
            {{ comment.datetime|ago }}
        </div>
        <div class="card-body">
            <h5 class="card-title">
                <img src="{{ asset('images/logos/'~comment.agent.faction.name~'.svg') }}"
                     style="height: 32px" alt="logo">
                <a class="{{ comment.agent.faction.name }}"
                   href="{{ path('agent_show', {'id':comment.agent.id}) }}">{{ comment.agent.nickname }}</a>
            </h5>
            <p class="card-text">
                {{ comment.text|raw }}
            </p>
        </div>
    </div>
{% endfor %}
