{% extends 'base.html.twig' %}

{% block title %}bot test{% endblock %}

{% block body %}
    <h1>Send bot message</h1>

    <form>
        <div class="row">
            <div class="col-sm-2">
                <label for="group">Chat Group</label>
            </div>
            <div class="col-sm-10">
                <select name="group" id="group" class="form-control">
                    <option value="default">Default</option>
                    <option value="admin">Admin</option>
                    <option value="test">Test</option>
                </select>
            </div>
        </div>
        <div class="form-group">

        </div>
        <div class="form-group">

            <label for="testtext">Message</label>
            <textarea name="testtext" id="testtext" cols="30" rows="10" class="form-control">{{ testtext }}</textarea>
        </div>


        <button class="btn btn-outline-success">S E N D</button>
    </form>
{% endblock %}
