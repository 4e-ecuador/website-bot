{% extends 'base.html.twig' %}

{% block title %}TestStat index{% endblock %}

{% block body %}
    <h1>TestStat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Csv</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for test_stat in test_stats %}
            <tr>
                <td>{{ test_stat.id }}</td>
                <td>{{ test_stat.csv[:20] }}</td>
                <td>
                    <a href="{{ path('test_stat_show', {'id': test_stat.id}) }}">show</a>
                    <a href="{{ path('test_stat_edit', {'id': test_stat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('test_stat_new') }}">Create new</a>
{% endblock %}
