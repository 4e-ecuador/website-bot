{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Challenge - {{ challenge.name }}{% endblock %}

{% block body %}
    <h1>{{ challenge.name }}</h1>

    <h4>
        <span class="oi oi-media-play"></span> {{ challenge.dateStart ? challenge.dateStart|date('Y-m-d H:i:s') : '' }}
        <br>
        <span class="oi oi-media-stop"></span> {{ challenge.dateEnd ? challenge.dateEnd|date('Y-m-d H:i:s') : '' }}
    </h4>

    {{ 'Scores at:'|trans }} {{ 'now'|date('Y-m-d H:i:s') }}

    <table>
        {% set cnt = 1 %}
        {% for agent, value in entries %}
            <tr>
                <td>{{ cnt }}.</td>
                <td>
                {% set level = medalLevel(challenge.name, value) %}
                {% if level %}
                    <span class="medal50-events medal-{{ getChallengePath(challenge.codeName, level) }}"
                          title="{{ level|translateMedalLevel }}"></span>
                {% endif %}
                </td>
                <td>
                    {{ agent }}
                </td>
                <td class="text-right">
                    <code>
                        {{ value|number_format }}
                    </code>
                </td>
            </tr>
            {% set cnt = cnt + 1 %}
        {% endfor %}
    </table>
{% endblock %}
