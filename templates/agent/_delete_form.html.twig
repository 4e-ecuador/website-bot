<form method="post" action="{{ path('agent_delete', {'id': agent.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ agent.id) }}">
    <button title="{{ 'Delete'|trans }}" class="btn btn-outline-danger"><span class="oi oi-x"></span></button>
</form>
