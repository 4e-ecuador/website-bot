<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}4E{% endblock %}</title>

    <link rel="icon" type="image/x-icon" href="
    {% if 'dev' == app.environment %}
        {{ asset('favicon-dev.ico') }}
    {% else %}
        {{ asset('favicon.ico') }}
    {% endif %}
    "/>

    {{ encore_entry_link_tags('app') }}

    <link href="{{ asset('img/open-iconic/font/css/open-iconic-bootstrap.css') }}" rel="stylesheet">

    {% block stylesheets %}{% endblock %}
</head>
<body>
{% include('_menu.html.twig') %}

<div class="container" id="main-container">
    <noscript><h1 class="alert alert-danger">Please activate Javascript</h1></noscript>
    {% include ('_flash-messages.html.twig') %}
    {% block body %}{% endblock %}
</div>

{% include ('_footer.html.twig') %}

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
