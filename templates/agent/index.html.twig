{% extends 'base.html.twig' %}

{% import '_paginator-elements.html.twig' as paginator %}

{% block title %}Agent index{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/paginator.js') }}"></script>
{% endblock %}

{% block body %}
    <h1>Agent index</h1>

    <a class="btn btn-success" href="{{ path('agent_new') }}">Create new</a>

    <form method="post">

        <div class="row">
            <div class="col-xs-2">{{ paginator.listLimit(paginatorOptions) }}</div>
            <div class="col-xs-10">{{ paginator.pagination(paginatorOptions) }}</div>
        </div>

        <table class="table table-sm table-hover">
            <thead>
            <tr>
                <th></th>
                <th>
                    {{ paginator.criteria('nickname', paginatorOptions) }}
                </th>
                <th></th>
                <th>
                    {{ paginator.criteria('realName', paginatorOptions) }}
                </th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <th>{{ paginator.ordering('id', paginatorOptions) }}</th>
                <th>
                    {{ paginator.ordering('nickname', paginatorOptions) }}
                </th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <th>Id</th>
                <th>Nickname</th>
                <th>Faccion</th>
                <th>Nombre Real</th>
                <th>Position</th>
                <th>Comentarios</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for agent in agents %}
                <tr>
                    <td>{{ agent.id }}</td>
                    <td>{{ agent.nickname }}</td>
                    <td>{{ agent.faction.name }}</td>
                    <td>{{ agent.realName }}</td>
                    <td>{{ agent.lat }}, {{ agent.lon }}</td>
                    <td>{{ agent.comments|length ? agent.comments|length : '' }}</td>
                    <td>
                        <a href="{{ path('agent_show', {'id': agent.id}) }}">show</a>
                        <a href="{{ path('agent_edit', {'id': agent.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ paginator.formFields(paginatorOptions) }}

    </form>

{% endblock %}
