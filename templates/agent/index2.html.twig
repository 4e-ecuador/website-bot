{% extends 'base.html.twig' %}
{% import '_/buttons.html.twig' as buttons %}

{% block title %}{{ 'Agent index'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('agents') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('agents') }}
{% endblock %}

{% block body %}
    {% if is_granted('ROLE_EDITOR') %}
        <div class="float-right">
            {{ buttons.new(path('agent_new')) }}
        </div>
    {% endif %}

    <h1>{{ 'Agent index'|trans }}</h1>

    <div id="app"></div>
{% endblock %}

