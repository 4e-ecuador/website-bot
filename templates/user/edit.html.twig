{% extends 'base.html.twig' %}

{% block title %}{{ 'Edit User'|trans }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('user-edit') }}
{% endblock %}

{% block body %}
    <h1>{{ 'Edit User'|trans }}</h1>

    {{ include('user/_form.html.twig', {'button_label': 'Update'|trans}) }}

    <div id="mailResult"></div>
    <div class="btn-group" role="group">
        <a class="btn btn-outline-secondary" href="{{ path('user_index') }}">{{ 'Back to list'|trans }}</a>

        <div class="btn btn-outline-info sendMail" data-userid="{{ user.id }}">{{ 'Send confirmation mail'|trans }}</div>

        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
