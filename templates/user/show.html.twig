{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="btn-group float-right">
        <a class="btn btn-outline-secondary" href="{{ path('user_index') }}" title="{{ 'Back to list'|trans }}">
            <span class="oi oi-arrow-left"></span>
        </a>
        <a class="btn btn-outline-warning" href="{{ path('user_edit', {'id': user.id}) }}" title="{{ 'Edit'|trans }}">
            <span class="oi oi-pencil"></span>
        </a>
        {{ include('user/_delete_form.html.twig') }}
    </div>
    <h1>User</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Google Id</th>
            <td>{{ user.googleId }}</td>
        </tr>
        <tr>
            <th>FCM Token</th>
            <td>{{ user.fireBaseToken }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
        </tr>
        <tr>
            <th>Agent</th>
            <td>{{ user.agent ? user.agent.nickname : 'N/A' }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
