{% extends 'base.html.twig' %}

{% block title %}About{% endblock %}

{% block body %}
    <h1>System Info</h1>

    <div class="accordion" id="accordionLog">
        {% for date, log in logEntries %}
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapse{{ loop.index }}" aria-expanded="true" aria-controls="collapseOne">
                        {{ date }}
                    </button>
                </h2>
                <div id="collapse{{ loop.index }}" class="accordion-collapse collapse" data-bs-parent="#accordionLog">
                    <div class="accordion-body">
                        <pre>
                        {{ log }}
                        </pre>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
