{% extends 'base.html.twig' %}

{% block title %}4E{% endblock %}

{% block body %}

    <div class="card cite">
        <div class="card-body cite-body">
            <h5>
                <img src="{{ asset('images/tg-emojis/silhouette.png') }}" alt="silhouette" height="24px">
                {{ cite }}
            </h5>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-7">
            {% include 'default/_greeting.html.twig' %}
        </div>

        <div class="col-sm-5">
            {% include 'default/_search_box.html.twig' %}
        </div>
    </div>

    {% if is_granted('ROLE_AGENT') %}
        {% include 'default/_event_list.html.twig' %}
    {% endif %}
    {% if is_granted('ROLE_EDITOR') %}
        {% include 'default/_comment_list.html.twig' %}
    {% endif %}
{% endblock %}
